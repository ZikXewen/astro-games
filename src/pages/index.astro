---
import WasmMinesweeper from '../components/WasmMinesweeper.astro';
import WordlePreact from '../components/WordlePreact'
import TicTacToe from '../components/TicTacToe.svelte'
---

<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>Astro Minigames</title>
</head>

<body class="bg-slate-800 text-slate-200">
	<section class="min-h-screen py-16 flex flex-col justify-center text-center">
		<h2 class="text-4xl">Minesweeper with Rust WASM + Vanilla Typescript</h2>
		<WasmMinesweeper />
	</section>
	<section class="max-w-6xl mx-auto min-h-screen py-16 flex flex-col">
		<h2 class="text-center text-4xl">Wordle with Preact</h2>
		<WordlePreact client:visible />
	</section>
	<section class="min-h-screen py-16 flex flex-col justify-center text-center">
		<h2 class="text-4xl">Tic-Tac-Toe with Svelte</h2>
		<TicTacToe client:visible />
	</section>
	<footer class="h-16 leading-[4rem] text-center bg-slate-900">
		Source code can be found
		<a href="https://github.com/ZikXewen/astro-games" class="underline">here</a>.
	</footer>
</body>

</html>