---
interface Props {
  title: string
  techs: string[]
}
const { title, techs } = Astro.props as Props
---

<section
  class="max-w-6xl mx-auto min-h-screen py-16 flex flex-col justify-center text-center"
>
  <h2 class="text-4xl mb-4">{title}</h2>
  <div class="flex gap-2 justify-center">
    {techs.map((tech) => <img src={`${tech}.svg`} class="w-8" />)}
  </div>
  <slot />
</section>
